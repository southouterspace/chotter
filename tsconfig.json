{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chotter/database": [
        "./packages/database/src"
      ],
      "@chotter/database/*": [
        "./packages/database/src/*"
      ],
      "@chotter/ui": [
        "./packages/ui/src"
      ],
      "@chotter/ui/*": [
        "./packages/ui/src/*"
      ],
      "@chotter/utils": [
        "./packages/utils/src"
      ],
      "@chotter/utils/*": [
        "./packages/utils/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./apps/web-admin"
    },
    {
      "path": "./apps/web-customer"
    },
    {
      "path": "./apps/mobile-tech"
    },
    {
      "path": "./apps/api"
    },
    {
      "path": "./packages/database"
    },
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/utils"
    },
    {
      "path": "./workers/route-optimizer"
    },
    {
      "path": "./workers/notifications"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".expo",
    ".supabase"
  ],
  "extends": "expo/tsconfig.base"
}
